@model global::Motorbike.ViewModels.ContactViewModel
@{
    ViewData["Title"] = "Liên hệ";
}

@section Styles {
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />
}

<div class="contact-banner">
    <div class="container">
        <h1 class="text-center">Liên hệ với chúng tôi</h1>
        <p class="text-center">Chúng tôi luôn sẵn sàng hỗ trợ bạn mọi lúc mọi nơi</p>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <!-- Form Liên Hệ -->
        <div class="col-lg-6 mb-4">
            <div class="contact-form-card">
                <h2 class="contact-title">Gửi tin nhắn cho chúng tôi</h2>
                <p class="contact-subtitle">Hãy cho chúng tôi biết bạn đang quan tâm điều gì?</p>
                
                <form asp-action="SendMessage" asp-controller="Contact" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Nhập họ tên của bạn" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label fw-bold"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại của bạn" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Subject" class="form-label fw-bold"></label>
                        <input asp-for="Subject" class="form-control" placeholder="Nhập tiêu đề tin nhắn" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Message" class="form-label fw-bold"></label>
                        <textarea asp-for="Message" class="form-control" rows="5" placeholder="Nhập nội dung tin nhắn của bạn"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-submit-contact">
                        <i class="fas fa-paper-plane me-2"></i>Gửi tin nhắn
                    </button>
                </form>
            </div>
        </div>
        
        <!-- Thông tin liên hệ và Bản đồ -->
        <div class="col-lg-6">
            <div class="contact-info-card mb-4">
                <h2 class="contact-title">Thông tin cửa hàng</h2>
                <p class="contact-subtitle">Bạn có thể ghé thăm hoặc liên hệ với chúng tôi qua:</p>
                
                <div class="contact-info-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <div class="contact-info-content">
                        <h5>Địa chỉ</h5>
                        <p>123 Đường Lê Lợi, Quận 1, TP. Hồ Chí Minh</p>
                    </div>
                </div>
                
                <div class="contact-info-item">
                    <i class="fas fa-envelope"></i>
                    <div class="contact-info-content">
                        <h5>Email</h5>
                        <p><a href="mailto:support@bikeshop.vn">support@bikeshop.vn</a></p>
                    </div>
                </div>
                
                <div class="contact-info-item">
                    <i class="fas fa-phone-alt"></i>
                    <div class="contact-info-content">
                        <h5>Điện thoại</h5>
                        <p><a href="tel:+84123456789">+84 123 456 789</a></p>
                    </div>
                </div>
                
                <div class="contact-info-item">
                    <i class="fas fa-clock"></i>
                    <div class="contact-info-content">
                        <h5>Giờ làm việc</h5>
                        <p>8:00 - 20:00, Thứ Hai đến Chủ Nhật</p>
                    </div>
                </div>
                
                <div class="social-links mt-4">
                    <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
            
            <!-- Google Maps -->
            <div class="google-map-wrapper">
                <iframe 
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.5177580567047!2d106.69916791474896!3d10.772024062318425!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f4148a817a7%3A0xbad2d1ac1aabb3ad!2zMTIzIMSQxrDhu51uZyBMw6ogTOG7o2ksIELhur9uIE5naMOpLCBRdeG6rW4gMSwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1656328236228!5m2!1svi!2s" 
                    width="100%" 
                    height="300" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}